	body
		div.wechat-share-hide
			img(src="img/share.jpg")
		.loading
			.text 努力加载中...
		.audios
			audio#door(src="mp3/door.mp3",preload)
			audio#music(src="mp3/music.mp3",preload,loop,autoplay)
		.wrapper
			.pages
				section.page(cantmove="true")
					.door
						.door-left
						.door-right
					.page-1
						.text
							.item-title.fadeIn.animated
								img(src="img/text-1.png")
							-for(var i=2;i<9;i++)
								.item.fadeIn.animated(class="item-#{i}")
									img(src="img/text-#{i}.png")
						.nextpoint
				section.page
					.page-2
						.keeper(data-animation="fadeIn")
							img(src="img/keeper.jpg")
							.title(data-animation="fadeInDown",data-delay="500")
								img(src="img/page-2-title.png")
						.text
							.item(data-animation="fadeInUp",data-delay="1000")
								img(src="img/page-2-text-1.png")
							.item(data-animation="fadeInUp",data-delay="1200")
								img(src="img/page-2-text-2.png")
							.item(data-animation="fadeInUp",data-delay="1400")
								img(src="img/page-2-text-3.png")
							.item(data-animation="fadeInUp",data-delay="1600")
								img(src="img/page-2-text-4.png")
						.logo(data-animation="fadeIn",data-delay="1800")
							.an(data-animation="tada",data-delay="2000")
								img(src="img/logo.png")
						.nextpoint
				section.page
					.page-3
						.zw
						.location(data-animation="fadeIn")
							img(src="img/page-3-location.jpg")

						a.map(href="http://map.baidu.com/mobile/webapp/place/detail/qt=ninf&wd=%E5%8C%97%E4%BA%AC%E5%B8%82%E6%97%B6%E5%B0%9A%E5%B9%BF%E5%9C%BA&c=131&searchFlag=bigBox&version=5&exptype=dep&nb_x=12969901&nb_y=4824496&center_rank=1&uid=ce0a92dffcf420a8b1077d0d&industry=life&qid=8600166957009318406/showall=1&detail_from=list&vt=map",data-animation="zoomIn",data-delay="300",data-duration="500")
							img(src="img/map.jpg")
							.point.pulse.animated.infinite
								img(src="img/map-point.png")
						.logo(data-animation="zoomIn",data-delay="800")
							.an(data-animation="tada",data-delay="1000")
								img(src="img/logo.png")
		script(src="js/Zepto.min.js",type="text/javascript")
